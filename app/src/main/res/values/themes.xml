<resources>
    <!-- Base application theme. -->
    <style name="Theme.DoobyPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/color_light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/backgroundColor</item>
        <item name="colorSecondaryVariant">@color/color_almost_black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.Splash" parent="@style/Theme.DoobyPlus">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>